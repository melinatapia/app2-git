<?xml version="1.0" encoding="utf-8"?>

 <widget xmlns ="http://www.w3.org/ns/widgets"
   xmlns:gap="http://phonegap.com/ns/1.0"
   id ="com.phonegap.example2"
   version ="1.0.0">
   
  <name>app2 TELEFONIA CELULAR EN MEXICO</name>
  
   <description>
    Aplicación que muestra información sobre la telefonía celular
   </description>
   
   <author href="https://build.phonegap.com" email="tapia.melina.29@gmail.com">
     Tapia Leon Melina 4F
	</author>
	
	<!--Personaliza la aplicacion y plataforma-->
	<preference name="orientacion" value="default"/>
	<!--<preference name="orientacion" value"portrait"/>
	<preference name="orinetacion" value="landsacpe"/>-->
	<preference name="target-device" value="universal"/>
	<preference name="fullscreen" value="true"/>
	<preference name="android-installLocation" value="auto"/>
	<preference name="permissions" value="INTERNET"/>
	
	<!--Plugins-->
	<!--Core plugins-->
 <plugins name="cordova-plugin-device" spec="~1.1.4"/>
 <plugins name="cordova-plugin-vibration" spec="~2.1.3"/>  
 <plugins name="cordova-plugin-dialogs" spec="~1.3.1"/> 
 
 <!--<plugin name="cordova-plugin-geolocation" source="npm" />-->
  <!--Third part plugins-->
  <!-- Para accesar a paginas em internet-->
  <allow-intent href="https://*/*"/>
  <acces origin="https://*/*"/>
  <allow-intent href="http://*/*"/>
  <acces origin="http://*/*"/>
  <plugin name="cordava-plugin-whitelist" source="npm"/>
  <!--Colocar icono app-->
  
  <icon src="res/android/mdpi.png"/>
  
  </widget>
 
 
    
	